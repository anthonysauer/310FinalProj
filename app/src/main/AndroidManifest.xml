<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.a310finalproj">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="HomeShare"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.310FinalProj"
        tools:targetApi="31">
        <activity
            android:name=".LoginPage"
            android:exported="false" />
        <activity
            android:name=".CreateAccountPage"
            android:exported="false" />
        <activity
            android:name=".EditProfilePage"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateInvitationPage"
            android:exported="false" />
        <activity
            android:name=".InvitationsPage"
            android:exported="false" />
        <activity
            android:name=".ResponsesPage"
            android:exported="false" />
        <activity
            android:name=".InvitationDetails"
            android:exported="true" />
        <activity
            android:name=".ResponseDetails"
            android:exported="true" />
        <activity
            android:name=".ManageInvitationsPage"
            android:exported="true" />


    </application>

</manifest>