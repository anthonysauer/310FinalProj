<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManageInvitationsPage">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="60dp"
        android:background="@color/white"
        android:focusable="true"
        android:text="Your Invitations"
        android:textColor="@color/white"
        android:textColorHint="@color/light_orange"
        android:textSize="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="View Invitations"
        android:id="@+id/viewInvsButton"
        android:onClick="viewInvs"
        android:layout_marginTop = "200dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="View Responses"
        android:id="@+id/viewResButton"
        android:onClick="viewResponses"
        android:layout_below="@+id/viewInvsButton" />

</RelativeLayout>